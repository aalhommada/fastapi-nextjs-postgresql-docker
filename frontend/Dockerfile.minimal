# Ultra-minimal frontend for low-memory environments
FROM node:18-alpine

WORKDIR /app

# Set environment variable
ENV NODE_ENV=development

# Copy package files
COPY package*.json ./

# Install only the essential dependencies
RUN npm install --only=production && npm cache clean --force

# Copy source code
COPY . .

EXPOSE 3000

# Use development server - no build required
CMD ["npm", "run", "dev", "--", "--hostname", "0.0.0.0"]
